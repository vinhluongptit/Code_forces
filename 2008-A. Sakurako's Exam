#include <bits/stdc++.h>
using namespace std;
using ll = long long;

int main() 
{
	int t;
	cin >> t;
	while(t--){
		int a, b;
		cin >> a >> b;
		b %= 2;
		int ok = 1;
		if(b){
			if(a % 2 == 0 && a >= 2){
				
			}
			else ok = 0;
		}
		if(a & 1) ok = 0;
		if(ok) cout << "YES";
		else cout << "NO";
		cout << endl;
	}
}
