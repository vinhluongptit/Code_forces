#include <bits/stdc++.h>
using namespace std;
using ll = long long;
 
int main() 
{
  int t;
  cin >> t;
  while(t--){
    int n;
    cin >> n;
    int a[n];
    ll sum = 0;
    int kq = 0;
    for(int i = 0; i < n; i++){
      cin >> a[i];
      if(a[i] == 0){
        kq++;
        a[i]++;
      }
      sum += a[i];
    }
    if(sum == 0) kq++;
    cout << kq << endl;
  }
}
